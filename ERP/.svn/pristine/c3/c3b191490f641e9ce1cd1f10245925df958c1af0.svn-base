<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>

<h1>출고관리 : 원자재 반품신청했던 목록들을 보여준다.</h1>

<!-- 반품서 목록들을 보여주고 반품서 를 누르면 상세보기 모달창 혹은 새창으로 나와서 반품원자재 목록들을 출고시킨다. -->
<div>
	<form:form id="searchForm" action="${pageContext.request.contextPath }/outer/matreturn" method="get">
	<input type="hidden" name="page" value=""/>
	<!-- 탭 -->
	<ul class="nav nav-pills nav-tabs">
	  <li class="nav-item" id="status_all">
	    <a class="nav-link active" data-toggle="tab" href="#">
	    	<spring:message code="status.all"/>
	    </a>
	  </li>
	  <li class="nav-item" id="status_ing">
	    <a class="nav-link" data-toggle="tab" href="#">
	    	<spring:message code="status.ing"/>
	    </a>
	  </li>
	  <li class="nav-item" id="status_finish">
	    <a class="nav-link" data-toggle="tab" href="#">
	  		<spring:message code="status.reFin"/>  
	    </a>
	  </li>
	  <li class="nav-item" id="status_cancle">
	    <a class="nav-link" data-toggle="tab" href="#">
	    	<spring:message code="status.reCancle"/>
	    </a>
	  </li>
	</ul>
	<input type="hidden" name="status" id="status" value=""/> <!-- 진행상태 넘겨주기 -->
		<table class="table">
			<tr>
				<th>
					<spring:message code="writer"/>
				</th>
				<td><input type="text" name="emp_name"/></td>
				<td><input type="button" value="검색" id="searchBtn"/></td>
			</tr>
			<tr>
				<th>
					<spring:message code="writedate"/>
				</th>
				<td colspan="2">
					<input name="startDay" type="date"/>~<input name="endDay" type="date"/>
				</td>
				
			</tr>
		</table>
	</form:form>
</div>
<br/><br/>
<table class="table">
	<tr>
		<th>No.</th>
		<th>
			<spring:message code="ret_no"/>
		</th>
		<th>
			<spring:message code="writer"/>
		</th>
		<th>
			<spring:message code="ret_date"/>
		</th>
		<th>
			<spring:message code="status"/>
		</th>
	</tr>
	<tbody id="listbody"></tbody>
	<tfoot>
		<tr>
			<td colspan="4">
				<nav id="pagingArea">${pagingVO.pagingHTML }</nav>
			</td>
		</tr>
	</tfoot>
</table>
<script type="text/javascript" src="${pageContext.request.contextPath }/resources/js/paging.js"></script>
<script type="text/javascript">
	//탭
	//전체
	$("#status_all").on("click", function(){
		$("#status").val("");
		searchBtn.click();
	});
	//진행중
	$("#status_ing").on("click", function(){
		$("#status").val("Q001");
		searchBtn.click();
	});
	//반품 완료
	$("#status_finish").on("click", function(){
		$("#status").val("Q002");
		searchBtn.click();
	});
	//반품 취소
	$("#status_cancle").on("click", function(){
		$("#status").val("Q006");
		searchBtn.click();
	});

	// 목록 띄우기 
	var listbody = $("#listbody");
	var searchForm = $("#searchForm").paging({
		searchUI : "#searchUI",
		searchBtn : "#searchBtn",
		pagination : "#pagingArea",
		pageParam : "page",
		byAjax : true,
		success : function(resp){
			let buyList = resp.dataList;
			let pagingHTML = resp.pagingHTML;
			console.log(buyList);
			let trTags = [];
			if(buyList.length > 0){
				$.each(buyList,function(idx,buyre){
					let trTag = 
						$("<tr>").append(
							$("<td>").text(buyre.rnum),
							$("<td>").text(buyre.ret_no),
							$("<td>").text(buyre.emp_name),
							$("<td>").text(buyre.ret_date),
							$("<td>").text(buyre.status =='Q001' ? '진행중' : '반품취소')
						).data("board_no",buyre.ret_no);
					trTags.push(trTag);
				});
				$("#pagingArea").html(pagingHTML);
			}else{
				trTags.push($("<tr>").html(
					$("<td colspan='5'>").text("조건에 맞는 글이 없습니다.")	
				));
				$("#pagingArea").empty();
			}
			
			$("#listbody").html(trTags);
			listbody.data("currentPage",resp.currentPage);
			searchForm.find("[name='page']").val("");
		}
	}).submit();
	
	// 새창띄우기 
	var listBody = $("#listbody").on("click","tr",function(){
		let board_no = $(this).data("board_no");
		let url = "<c:url value='/outer/matreturn/'/>"+board_no;
		let _width = '1000';
		let _height = '500';
		let _left = Math.ceil((window.screen.width - _width)/2);
		let _top = Math.ceil((window.screen.width - _height)/6);
		let popupOption = "width="+_width+", height="+_height+", left="+_left+", top="+_top;
		window.open(url,"",popupOption);
	}).css({cursor:"pointer"});
</script>
